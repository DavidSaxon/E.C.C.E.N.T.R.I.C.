<h1>Listing items</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @random.each do |something| %>
    <tr>
      <td><%= something.name %></td>
      <td><%= image_tag something.url, class: "dragme", id: "item" %></td>
    </tr>
  <% end %>
</table>

<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js" %>
<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" %>

<script type="text/javascript">

$( init );

function init() {
  $('#item').draggable( {
    containment: '#html',
    cursor: 'move'
  } );
}

</script>