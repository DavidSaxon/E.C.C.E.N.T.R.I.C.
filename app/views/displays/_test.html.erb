<img id="nz_map" src="/images/nz_map.png", alt="New Zealand map", width="400px", height="480px">
<img id="clouds" src="/images/clouds.png", alt="clouds", width="400px">

<script>

right_x = $("#nz_map").offset().left;
right_y = $("#nz_map").offset().top;

$("#clouds").css({
	opacity: 0.5,
	left:right_x + 'px', 
	top:right_y + 'px'
});


document.onclick = function() {

    //change clouds opacity
    if (cloudOpUp) {

        cloudOpacity += 0.1;
    }
    else {

        cloudOpacity -= 0.1;
    }

    if (cloudOpacity < 0.0) {

        cloudOpUp = true;
        cloudOpacity = 0.0;
    }
    else if (cloudOpacity > 1.0) {

        cloudOpUp = false;
        cloudOpacity = 1.0;
    }

    $("#clouds").css({opacity: cloudOpacity});
};

</script>