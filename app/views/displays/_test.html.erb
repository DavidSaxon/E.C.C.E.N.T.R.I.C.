<style>
#nz_map {
    padding: inherit;
    margin: inherit;
    margin-left: 25%;
    user-select: none;
}

#clouds {
    padding: inherit;
    margin: inherit;
    margin-left: 25%;
    position: absolute;
    user-select: none;
}
</style>


<img id="nz_map" src="/images/nz_map.png", alt="New Zealand map", width="400px", height="480px">
<img id="clouds" src="/images/clouds.png", alt="clouds", width="400px">

<script>
var cloudOpUp = true;

function setup_map() {
    right_x = $("#nz_map").offset().left;
    right_y = $("#nz_map").offset().top;

    $("#clouds").css({
        opacity: impact,
        left:right_x + 'px', 
        top:right_y + 'px'
    });
}

function update_map() {
    $("#clouds").css({opacity: impact});
}

$("#clouds").onclick = function() {

    //change clouds opacity
    if (cloudOpUp) {
        impact += 0.1;
    }
    else {
        impact -= 0.1;
    }
    if (impact < 0.0) {
        cloudOpUp = true;
        impact = 0.0;
    }
    else if (impact > 1.0) {
        cloudOpUp = false;
        impact = 1.0;
    }

    update_map();
};

</script>